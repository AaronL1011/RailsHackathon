<div class="mb-5">
<h1 class="text-center">Githot Tracker</h1>
</div>
<div class="d-flex flex-column align-items-center justify-content-center">
    <% for repo in @repos %>
        <div class="card w-50 position-relative mb-5">
            <div class="card-header">
                <%= repo.title%>
            </div>
            <div class="card-body">
                <p class="card-text"><%= repo.description%></p>
                <span class="badge badge-secondary"><%= repo.language%></span><br><br>
                <a href="#" class="btn btn-primary">Discuss Repo</a> <a href="#" class="btn btn-primary">View on Github</a>
                <span class="text-right"><%= repo.stars%></span>
            </div>
        </div>
    <% end %>
</div>
