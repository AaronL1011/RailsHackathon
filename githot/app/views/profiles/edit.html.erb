<% if @user.errors.any? %>
    <div class="errors">
        <% @user.errors.full_messages.each do |error| %>
            <p><%= error %></p>
        <% end %>
    </div>
<% end %>

<%= form_with model: @user, local: true, method: :post do |form| %>
    <div>
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>
    
    <div>
        <%= form.label :bio %>
        <%= form.text_field :bio, value: @user.bio %>
    </div>

    <div>
        <%= form.submit "Update" %>
    </div>
<% end %>