<div class="mb-5 mt-5">
    <h1 class="text-center"><%= @repo.title%></h1>
</div>

<div class="grid mb-5">
    <div class="repo">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <div class="card w-50 mb-5">
                <div class="card-header d-flex justify-content-between flex-wrap">
                    <strong><%= @repo.title %></strong>
                    <span><%= @repo.owner %></span>
                    <span><svg viewBox="0 0 10 16" version="1.1" width="10" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M8 1a1.993 1.993 0 00-1 3.72V6L5 8 3 6V4.72A1.993 1.993 0 002 1a1.993 1.993 0 00-1 3.72V6.5l3 3v1.78A1.993 1.993 0 005 15a1.993 1.993 0 001-3.72V9.5l3-3V4.72A1.993 1.993 0 008 1zM2 4.2C1.34 4.2.8 3.65.8 3c0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2zm3 10c-.66 0-1.2-.55-1.2-1.2 0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2zm3-10c-.66 0-1.2-.55-1.2-1.2 0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2z"></path></svg> <%= @repo.forks %></span>
                    <span class="text-right"><svg height="16" class="star-align" vertical_align="text_bottom" viewBox="0 0 14 16" version="1.1" width="14" aria-hidden="true"><path fill-rule="evenodd" d="M14 6l-4.9-.64L7 1 4.9 5.36 0 6l3.6 3.26L2.67 14 7 11.67 11.33 14l-.93-4.74L14 6z"></path></svg> <%= @repo.stars %></span>
                </div>
                <div class="card-body">
                    <p class="card-text"><%= @repo.description %></p>
                    <span class="badge badge-secondary"><%= @repo.language %></span><br><br>
                    <div class="d-flex show-card">
                    <% if user_signed_in? %>
                        <% if @repo.likes.find_by_user_id(current_user.id) %>
                            <%= link_to 'Unlike', repo_likes_path(@repo), method: :post, class: "btn btn-primary mb-2" %>
                        <% else %>
                            <%= link_to 'Like', repo_likes_path(@repo), method: :post, class: "btn btn-primary mb-2" %>
                        <% end %>
                    <% end %>
                    <%= link_to  "View on Github", @repo.url, class:"btn btn-primary mb-2", target:"_blank" %>
                    <div class="likes-div">Likes: <%= @repo.likes.count%></div>
                    </div>
                </div>
            </div>

            <%= render  "shared/comments" %>
        </div>
    </div>
</div>
